<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="name"
			type="text"
			label="COM_NEWSLETTER_NAME"
			description=""
			class="inputbox validate-name"
			size="30"
			default=""
			required="true"
		/>

		<field name="email"
			type="email"
			label="JGLOBAL_EMAIL"
			description=""
			class="inputbox validate-email"
			size="30"
			default=""
			required="true"
			unique="true"
			validate="subemail"
		 />
		<field
            name="html"
			type="radio"
			default="1"
			label="COM_NEWSLETTER_HTML"
			description=""
			class="inputbox"
			size="30"
			required="true"
		 >
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="user_id" type="hidden" />

		<field name="subscriber_id" type="hidden" />

		<field 
			name="confirmed" 
			type="hidden" 
			default="1"
		/>
	</fieldset>
</form>
