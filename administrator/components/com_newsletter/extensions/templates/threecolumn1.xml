<?xml version="1.0" encoding="UTF-8"?>
<extension type="newsletter_template">
    <information>
        <name>Standard threecolumn template</name>
		<template>threecolumn1</template>
        <author>Migur</author>
        <creationDate>May 2011</creationDate>
        <copyright>Copyright (C) 2010 - Migur Ltd.</copyright>
        <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
        <authorEmail>info@migur.com</authorEmail>
        <authorUrl>http://migur.com/</authorUrl>
        <version>1.5.0</version>
        <description>This is the standard threecolumn newsletter template.</description>
    </information>
    <template>
<![CDATA[

<style type="text/css">
#outlook a{padding:0;}
body{width:100% !important;} .ReadMsgBody{width:100%;} .ExternalClass{width:100%;}
body{-webkit-text-size-adjust:none; -ms-text-size-adjust:none;}
body{margin:0; padding:0;}

img{line-height:100%; outline:none; text-decoration:none;}

#backgroundTable{height:100% !important; margin:0; padding:0; width:100% !important;}

p {margin: 1em 0;}

h1, h2, h3, h4, h5, h6 {
    color: black !important;
    line-height: 100% !important; }

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {color: blue !important;}

h1 a:active, h2 a:active,  h3 a:active, h4 a:active, h5 a:active, h6 a:active {
    color: red !important; }

h1 a:visited, h2 a:visited,  h3 a:visited, h4 a:visited, h5 a:visited, h6 a:visited {
    color: purple !important; }

table td { 
	border-collapse:collapse; 
	vertical-align: top;
}

.yshortcuts, .yshortcuts a, .yshortcuts a:link,.yshortcuts a:visited, .yshortcuts a:hover, .yshortcuts a span { color: black; text-decoration: none !important; border-bottom: none !important; background: none !important;}
</style>

<table bgcolor="[table_background]" width="600px" style="color:[text_color]">
    <tr>
        <td valign="top" colspan="3">
            <img
                src="[image_top.src]"
                width="[image_top.width]"
                height="[image_top.height]"
                alt="[image_top.alt]" />
        </td>
    </tr>
    <tr>
        <td valign="top" colspan="3">
            <position type="modules" name="header_module_position" alt="Header module position" />
        </td>
    </tr>
    <tr>
        <td valign="top" width="[width_column1]" height="[height_column1]">
            <position type="modules" name="col1_module_position" alt="Column 1 module position" />
        </td>
        <td valign="top" width="[width_column2]" height="[height_column2]">
            <position type="modules" name="col2_module_position" alt="Column 2 module position" />
        </td>
        <td valign="top" width="[width_column3]" height="[height_column3]">
            <position type="modules" name="col3_module_position" alt="Column 3 module position" />
        </td>
    </tr>
    <tr>
        <td valign="top" colspan="3">
            <position type="modules" name="footer_module_position" alt="Footer module position" />
        </td>
    </tr>
    <tr>
        <td valign="top" colspan="3">
            <img
                src="[image_bottom.src]"
                width="[image_bottom.width]"
                height="[image_bottom.height]"
                alt="[image_bottom.alt]" />
        </td>
    </tr>
    <tr><td valign="top" colspan="3" align="center">To unsubscribe or change subscriber options visit [unsubscription link]</td></tr>
    <tr><td valign="top" colspan="3" align="center">Powered by Migur <a href="http://migur.com/">Newsletter</a></td></tr>
</table>
]]>
    </template>
</extension>